{
  "name": "pwa-next-ts",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "lint:js": "eslint 'src/**/*.{ts,tsx}' --config .eslintrc.js --ignore-path .eslintignore",
    "lint:styled-components": "stylelint 'src/**/*_Styled.{ts,tsx}'",
    "telemetry-status": "npx next telemetry status",
    "telemetry-enable": "npx next telemetry enable",
    "telemetry-disable": "npx next telemetry disable"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx|js)": [
      "npm run lint:js",
      "npm run lint:styled-components",
      "npm run format"
    ]
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.5.0",
    "next": "^10.0.8",
    "next-pwa": "^5.0.5",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-redux": "^7.2.2",
    "sass": "^1.32.2",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@types/node": "^14.14.14",
    "@types/react": "^17.0.0",
    "@types/react-redux": "^7.1.15",
    "@types/styled-components": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "babel-plugin-styled-components": "^1.12.0",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "stylelint": "^13.8.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "typescript": "^4.1.3"
  }
}
